          android:id="@+id/botao6"
          android:text="6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/botao5"
          android:layout_below="@id/botao3"/>
      <Button
          android:id="@+id/botao7"
          android:text="7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/botao4"
          android:layout_marginLeft="50dp"/>
      <Button
           android:id="@+id/botao8"
           android:text="8"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/botao5"
           android:layout_toRightOf="@id/botao7"/>

        <Button
            android:id="@+id/botao9"
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/botao8"
            android:layout_below="@id/botao6"/>

