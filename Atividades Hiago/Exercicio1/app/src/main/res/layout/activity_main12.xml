        android:layout_toRightOf="@id/botao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/botao4"
        android:layout_marginLeft="50dp"
        android:text="4"
        android:layout_below="@id/botao1"
        android:layout_width="wrap_content"
